@{
    ViewBag.Title = "Dashboard";
}

<div class="row mt-3">
    <div class="col-md-12">
        <div id="tabs">
            <ul class="nav nav-tabs" id="tabs-indicadores" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="painel-tab" data-toggle="tab" href="#painel"
                       role="tab" aria-controls="painel" aria-selected="true"><i class="fas fa-chart-line icone-home"></i>Painel</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="relatorios-tab" data-toggle="tab" href="#relatorios"
                       role="tab" aria-controls="relatorios" aria-selected="false"><i class="fas fa-file-contract icone-home"></i>Relatórios</a>
                </li>
            </ul>
            <div class="row mt-3" id="filtros-dashboard">
                <div class="col-lg-12">
                    <form class="form-inline">
                        <label class="mr-3" id="label-filtrar-por">Filtrar por: </label>
                        <select name="mes-dashboards" id="mes-dashboards"
                                class="form-control col-lg-2 col-12 mr-lg-2">
                            @{
                                var mesAtual = System.DateTime.Today.Month;
                            }
                            <option value="01" @(mesAtual == 1 ? "selected" : "")>Janeiro</option>
                            <option value="02" @(mesAtual == 2 ? "selected" : "")>Fevereiro</option>
                            <option value="03" @(mesAtual == 3 ? "selected" : "")>Março</option>
                            <option value="04" @(mesAtual == 4 ? "selected" : "")>Abril</option>
                            <option value="05" @(mesAtual == 5 ? "selected" : "")>Maio</option>
                            <option value="06" @(mesAtual == 6 ? "selected" : "")>Junho</option>
                            <option value="07" @(mesAtual == 7 ? "selected" : "")>Julho</option>
                            <option value="08" @(mesAtual == 8 ? "selected" : "")>Agosto</option>
                            <option value="09" @(mesAtual == 9 ? "selected" : "")>Setembro</option>
                            <option value="10" @(mesAtual == 10 ? "selected" : "")>Outubro</option>
                            <option value="11" @(mesAtual == 11 ? "selected" : "")>Novembro</option>
                            <option value="12" @(mesAtual == 12 ? "selected" : "")>Dezembro</option>
                        </select>

                        <select name="ano-dashboards" id="ano-dashboards"
                                class="form-control col-lg-2 col-12 mr-lg-5">
                            @{
                                var anoAtual = System.DateTime.Today.Year;
                            }
                            <option value="2010" @(anoAtual == 2010 ? "selected" : "")>2010</option>
                            <option value="2011" @(anoAtual == 2011 ? "selected" : "")>2011</option>
                            <option value="2012" @(anoAtual == 2012 ? "selected" : "")>2012</option>
                            <option value="2013" @(anoAtual == 2013 ? "selected" : "")>2013</option>
                            <option value="2014" @(anoAtual == 2014 ? "selected" : "")>2014</option>
                            <option value="2015" @(anoAtual == 2015 ? "selected" : "")>2015</option>
                            <option value="2016" @(anoAtual == 2016 ? "selected" : "")>2016</option>
                            <option value="2017" @(anoAtual == 2017 ? "selected" : "")>2017</option>
                            <option value="2018" @(anoAtual == 2018 ? "selected" : "")>2018</option>
                            <option value="2019" @(anoAtual == 2019 ? "selected" : "")>2019</option>
                            <option value="2020" @(anoAtual == 2020 ? "selected" : "")>2020</option>
                            <option value="2021" @(anoAtual == 2021 ? "selected" : "")>2021</option>
                            <option value="2022" @(anoAtual == 2022 ? "selected" : "")>2022</option>
                        </select>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="tab-content" id="conteudo-tab">
    <div div class="tab-pane fade show active" id="painel" role="tabpanel" aria-labelledby="painel-tab">
        <div class="row mt-3">
            <div class="col-lg-4 card-dashboard">
                <div class="card text-center">
                    <div class="card-header">
                        <span class="h3">Faturado</span>
                    </div>
                    <div class="card-body">
                        <div class="row d-flex align-items-center">
                            <div class="col-lg-2 col-md-3">
                                <i class="fas fa-money-check-alt icone-dashboard"></i>
                            </div>
                            <div class="col-lg-10 col-md-9">
                                <h4 id="totalFaturado"></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 card-dashboard">
                <div class="card text-center">
                    <div class="card-header">
                        <span class="h3">A receber</span>
                    </div>
                    <div class="card-body">
                        <div class="row d-flex align-items-center">
                            <div class="col-lg-2 col-md-3">
                                <i class="fas fa-money-bill-alt icone-dashboard"></i>
                            </div>
                            <div class="col-lg-10 col-md-9">
                                <h4 id="totalAReceber"></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 card-dashboard">
                <div class="card text-center">
                    <div class="card-header">
                        <span class="h3">Meta</span>
                    </div>
                    <div class="card-body">
                        <div class="row d-flex align-items-center">
                            <div class="col-lg-2 col-md-3">
                                <i class="fas fa-chart-line icone-dashboard"></i>
                            </div>
                            <div class="col-lg-10 col-md-9">
                                <h4 id="meta"></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 mt-3">
                <div class="card">
                    <div class="card-header">
                        Desempenho de Vendas
                    </div>
                    <div class="card-body">
                        <canvas id="exampleChart3"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="relatorios" role="tabpanel" aria-labelledby="relatorios-tab">
        <div class="col-md-12">
            <div class="row content-relatorios">
                <div class="col-md-6 mb-3">
                    <h4 class="h4 text-muted">VENDAS</h4>
                    <hr class="separator-relatorios">
                    <div>
                        <a href="/Relatorios/VendasPorPeriodo" class="link-relatorio">Vendas</a>
                        <a href="/Relatorios/RankingVendedores" class="link-relatorio">Ranking de Vendedores</a>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <h4 class="h4 text-muted">FATURAMENTO</h4>
                    <hr class="separator-relatorios">
                    <div>
                        <a href="/Relatorios/FaturamentoPorPeriodo" class="link-relatorio">Faturamentos</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <h4 class="h4 text-muted">CLIENTES</h4>
                    <hr class="separator-relatorios">
                    <div>
                        <a href="/Relatorios/SituacaoCarteiraClientes" class="link-relatorio">Situação carteira de Clientes</a>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <h4 class="h4 text-muted">COMISSÕES</h4>
                    <hr class="separator-relatorios">
                    <div>
                        <a href="/Relatorios/ComissaoPorPeriodo" class="link-relatorio">Comissão</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/Dashboard")
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0/dist/Chart.min.js"></script>
}